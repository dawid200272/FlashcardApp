<Window x:Class="FlashcardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashcardApp"
        
        xmlns:viewmodels="clr-namespace:FlashcardApp.ViewModels"
        xmlns:controls="clr-namespace:FlashcardApp.Controls"
        
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid Background="{StaticResource BrushPrimary1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:NavigationBar Grid.Row="0"/>

        <ContentControl Grid.Row="1" Content="{Binding Navigator.CurrentViewModel}" Margin="10, 5"/>

    </Grid>
</Window>
