                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </dropdownmenu:DropdownMenu.Resources>
                                            <Border
                                                Background="{StaticResource BrushPrimaryDark}"
                                                BorderBrush="LightGray"
                                                BorderThickness="1">
                                                <StackPanel
                                                    TextBlock.TextAlignment="Center">
                                                    <Button Content="Edit" Command="{Binding EditCardCommand}"/>
                                                    <Button Content="Delete" Command="{Binding DeleteCardCommand}"/>
