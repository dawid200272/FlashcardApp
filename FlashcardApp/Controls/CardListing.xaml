             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlashcardApp.WPF.Controls"
             
             xmlns:viewmodels="clr-namespace:FlashcardApp.WPF.ViewModels"
             xmlns:dropdownmenu="clr-namespace:DropdownMenu;assembly=DropdownMenu"
             
             d:DataContext="{d:DesignInstance Type=viewmodels:CardListingViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0, 0, 0, 1" BorderBrush="{StaticResource BrushPrimaryDark}"
                        Background="Transparent">
                            <TextBlock Text="{TemplateBinding Content}" Padding="5, 5, 5, 0"
                               Width="{TemplateBinding Width}" TextAlignment="Center"
                               Foreground="White"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Border
            BorderBrush="{StaticResource BrushPrimaryLight}"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=border}" />
                </Grid.OpacityMask>

                <!-- Opacity Mask Border -->
                <Border
                    x:Name="border"
                    Background="White"
                    CornerRadius="5" />

                <ListView
                    Background="{StaticResource BrushPrimaryDark}"
                    BorderThickness="0"
                    ItemsSource="{Binding CardListingItemViewModels}"
                    SelectedItem="{Binding SelectedCardListingItemViewModel}"
                    SelectionMode="Single">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
