<Application x:Class="FlashcardApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:viewmodels="clr-namespace:FlashcardApp.ViewModels"
             xmlns:views="clr-namespace:FlashcardApp.Views"
             
             xmlns:local="clr-namespace:FlashcardApp">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:DeckListingViewModel}">
                <views:DeckListingView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:DeckDetailsViewModel}">
                <views:DeckDetailsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:AddCardViewModel}">
                <views:AddCardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:CardReviewViewModel}">
                <views:CardReviewView/>
            </DataTemplate>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
